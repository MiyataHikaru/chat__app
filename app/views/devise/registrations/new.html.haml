.sign_up_wrapper
  .inner
    .sign_up_form
      %h2 ----Sign Up----
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :名前, class: 'field_label'
          %br/
          = f.text_field :name, autofocus: true, class: 'field_box'
        .field
          = f.label :メールアドレス, class: 'field_label'
          %br/
          = f.email_field :email, class: 'field_box'
        .field
          = f.label :パスワード, class: 'field_label'
          - if @minimum_password_length
            %em.field_label
              (#{@minimum_password_length} 字以上)
          %br/
          = f.password_field :password, autocomplete: "off", class: 'field_box'
        .field
          = f.label :パスワード（確認）,class: 'field_label'
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: 'field_box'
        .actions
          = f.submit "Sign Up", class: 'submit'
      = render "devise/shared/links"
