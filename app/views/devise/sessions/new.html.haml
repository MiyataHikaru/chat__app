.sign_in_wrapper
  .sign_in_inner
    .sign_in_form
      %h2 Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email, class: 'sign_in_field_label'
          %br/
          = f.email_field :email, autofocus: true, class: 'sign_in_field_box'
        .field
          = f.label :password, class: 'sign_in_field_label'
          %br/
          = f.password_field :password, autocomplete: "off", class: 'sign_in_field_box'
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "Log in", class: 'sign_in_submit'
      = render "devise/shared/links"
