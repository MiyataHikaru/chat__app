.profile-wrapper
  .profile
    .profile-image
      %p.profile-label プロフィール画像
      %br/
      = image_tag "huku.jpg", class: 'image'
    .profile-name
      %p.profile-label ユーザー
      %h3= @user.name
    .profile-email
      %p.profile-label メールアドレス
      %h3= @user.email
    .edit-link-box
      - if current_user?(@user)
        = link_to "プロフィールの編集", edit_user_path(@user), class: 'edit-link'
  .detail
